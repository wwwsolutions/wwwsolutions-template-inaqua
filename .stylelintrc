
{
  "extends": "stylelint-config-standard",
  "rules": {
    "rule-empty-line-before":  null,
    "at-rule-empty-line-before":  null,
    "comment-empty-line-before":  null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "/^define-/", 
          "mixin",
          "mixin-content",
          "extend"
        ]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "font-range",
          "min-font-size",
          "max-font-size",
          "lower-font-range",
          "upper-font-range",
          "line-height-range",
          "min-line-height",
          "max-line-height",
          "lower-line-height-range",
          "upper-line-height-range",
          "letter-spacing-range",
          "min-letter-spacing",
          "max-letter-spacing",
          "lower-letter-spacing-range",
          "upper-letter-spacing-range"
        ]
      }
    ],
    "unit-whitelist": ["em", "rem", "s", "px", "%", "vw", "vh", "ms"]
  }
}
